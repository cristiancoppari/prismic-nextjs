{
  "format": "custom",
  "id": "settings",
  "label": "Settings",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "site_title": {
        "type": "Text",
        "config": {
          "label": "Site Title",
          "placeholder": "This is the site title"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Google meta description"
        }
      },
      "og_image": {
        "type": "Image",
        "config": {
          "label": "OG Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "navigation": {
        "type": "Group",
        "config": {
          "label": "Navigation",
          "repeat": true,
          "fields": {
            "link": {
              "type": "Link",
              "config": {
                "label": "Link",
                "placeholder": "This is a link",
                "allowTargetBlank": true,
                "select": null,
                "allowText": true
              }
            },
            "label": {
              "type": "Text",
              "config": {
                "label": "Label",
                "placeholder": "This is the link label"
              }
            }
          }
        }
      }
    }
  }
}
